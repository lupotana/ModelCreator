    protected void Page_Load(object sender, EventArgs e)
    {
        WebTools.StartManage(ref className, ref classKey, ref classOperation, ref pageDetail, ref pageList, ref classTimeSpan);
        WebTools.StartSecurity(ref className, ref sessionInsert, ref sessionRead, ref sessionUpdate, ref sessionDelete);
        SecurityCheck.CheckPermission(className, HttpContext.Current.User.Identity.Name, ref isInsert, ref isRead, ref isUpdate, ref isDelete);
      
        if (!IsPostBack)
        {
            if (HttpContext.Current.Items[classKey] != null) Key = (Guid)HttpContext.Current.Items[classKey];
            if (HttpContext.Current.Items[classOperation] != null) Operation = (EventContext)HttpContext.Current.Items[classOperation];
            OperationManager();
            PopulateList();
        }        
    } 

    #region Property

